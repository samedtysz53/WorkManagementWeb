@model WorkManagementWeb.Models.TaskListModels

@{
    ViewData["Title"] = "TaskUpdate";
    Layout = "~/Views/Template/Template.cshtml";
}

<h4>Güncelle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="TaskUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="TaskName" class="control-label"></label>
                <input asp-for="TaskName" name="Taskname" class="form-control" />
                <span asp-validation-for="TaskName" class="text-danger"></span>
            </div>

            
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" name="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>